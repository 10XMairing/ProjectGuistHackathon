<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Suppply Details"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        />


    <EditText
        android:id="@+id/et_s_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Supplier name"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_s_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_s_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="food details"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_s_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time of pickup"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_s_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_s_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Days Available"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:background="@drawable/btn_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        />


</LinearLayout>